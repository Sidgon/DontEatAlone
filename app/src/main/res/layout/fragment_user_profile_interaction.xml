<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:onClick="onClick_btnEditProfile"
        android:text="@string/user_profile_btnEditProfile_text" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:onClick="onClick_btnLogout"
        android:text="@string/user_profile_btnLogout_text" />

    <View
        android:id="@+id/going_event_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_small"
        android:layout_margin="@dimen/margin_small"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnGoingEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_small"
        android:onClick="onClick_btnGoingEvents"
        android:text="@string/user_profile_btnGoingEvents_text" />

    <Button
        android:id="@+id/btnCreatedEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_middle"
        android:onClick="onClick_btnCreatedEvents"
        android:text="@string/user_profile_btnCreatedEvents_text" />
</LinearLayout>